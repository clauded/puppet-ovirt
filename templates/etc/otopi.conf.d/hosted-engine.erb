# action=setup
[environment:default]
<% if @hosted_engine_fqdn -%>
OVEHOSTED_NETWORK/fqdn=str:<%= @hosted_engine_fqdn %>
OVEHOSTED_ENGINE/appHostName=str:<%= @hosted_engine_fqdn %>
<% end -%>
<% if @hosted_engine_gateway -%>
OVEHOSTED_NETWORK/gateway=str:<%= @hosted_engine_gateway %>
<% end -%>
OVEHOSTED_STORAGE/imgSizeGB=str:<%= @hosted_engine_gb_storage %>
OVEHOSTED_VM/vmMemSizeMB=int:<%= @hosted_engine_mb_ram %>
OVEHOSTED_VM/vmVCpus=str:<%= @hosted_engine_num_cpu %>
<% if @hosted_engine_mac_address -%>
OVEHOSTED_VM/vmMACAddr=str:<%= @hosted_engine_mac_address %>
<% end -%>
<% if @engine_admin_password -%>
OVEHOSTED_ENGINE/adminPassword=str:<%= @engine_admin_password %>
<% end -%>
<% if @node_updateFirewall -%>
  <% if @osfamily == 'RedHat' -%>
    <% if @operatingsystemmajrelease <= '7' -%>
OVEHOSTED_NETWORK/firewallManager=str:iptables
    <% else -%>
OVEHOSTED_NETWORK/firewallManager=str:firewalld
    <% end -%>
  <% end -%>
<% end -%>
OVEHOSTED_NETWORK/bridgeName=str:ovirtmgmt
OVEHOSTED_ENGINE/clusterName=str:Default
OVEHOSTED_STORAGE/storageDatacenterName=str:hosted_datacenter
OVEHOSTED_STORAGE/glusterProvisionedShareName=str:hosted_engine_glusterfs
OVEHOSTED_STORAGE/storageDomainName=str:hosted_storage
OVEHOSTED_VDSM/consoleType=str:qxl
OVEHOSTED_NOTIF/smtpPort=str:25
OVEHOSTED_NOTIF/smtpServer=str:localhost
OVEHOSTED_NOTIF/sourceEmail=str:ovirt@localhost
OVEHOSTED_NOTIF/destEmail=str:root@localhost
